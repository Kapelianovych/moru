{
  "type": "module",
  "workspaces": [
    "./ui",
    "./core",
    "./store",
    "./server",
    "./website",
    "./controller",
    "./vite-plugin"
  ],
  "scripts": {
    "format": "prettier . --write",
    "test:core": "node --test \"./core/test/**/*.test.js\"",
    "test:store": "node --test \"./store/test/**/*.test.js\"",
    "test:controller": "vitest run --config ./vitest.config.controller.js",
    "start:website": "npm start -w website",
    "build:website": "npm run build -w website"
  },
  "devDependencies": {
    "@types/node": "^24",
    "@vitest/browser-playwright": "^4",
    "prettier": "^3",
    "typescript": "^5",
    "vitest": "^4"
  }
}
